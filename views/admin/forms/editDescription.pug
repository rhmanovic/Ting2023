
block content
  .container.clearfix
    form(method='POST' action='/admin/editDescription')
      input(type="hidden" name="chapterId" value= chapterId)
      div.form-group
        label(for='course') Description:
        input#name.form-control(type='text', placeholder='Description : ...' name='description')
      button.btn.btn-primary(type='submit') Submit
      span.appearText(type='button' onclick="this.parentElement.style.display = 'none'") cancel
