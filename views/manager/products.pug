extends layout

block content

  
  .main.container
    h1 Products Page


    .row
        h3 Create Product

        form(method='POST' action='AddProduct')
          .row
            //- .col-sm
              label(for='SKU') SKU :
              input.form-control(type='text' name='SKU')
            .col-sm
              label(for='name') Name :
              input.form-control(type='text' placeholder='Name' name='name')
             
          .row
            .col-sm
              label.text-white .
              br
              button.btn.btn-primary(type='submit') Submit

        table.table
          thead
            tr
              //- th(scope='col') #
              th(scope='col') No
              th(scope='col') Name
              th(scope='col') Cost
              th(scope='col') Price
              th(scope='col') Discount Price
              th(scope='col') Quantity
              th(scope='col') Naseem
              th(scope='col') Qurain
              th(scope='col') Category
              th(scope='col') sellCount
              th(scope='col') Brand
              th(scope='col') Vendor
              th(scope='col') Status
              th(scope='col') warranty
          tbody
            each product,index in productData
               
              tr
                //- th(scope='row')= index+1
                
                td
                  a(href=`productPage/${product._id}`)
                    div= `${product.productNo}`
                td
                  a(href=`productPage/${product._id}`)
                    div= product.name
                //td= product.name
                if product.cost
                  td= `${product.cost.toFixed(3)}`
                else
                  td -
                if product.cost
                  td= `${product.price.toFixed(3)}`
                else 
                  td -
                if product.discountPrice == 0
                  td  -
                else
                  td= `${product.discountPrice} K.D`
                    a(href=`deletProductDiscount/${product._id}`)
                      i.bi.bi-trash.m-2

                td= `${product.quantity}`
                td= `${product.naseem}`
                td= `${product.qurain}`
                td= `${product.categoryName}`
                td= `${product.sellCount}`
                td= product.brandName
                td= product.vendorName
                td= `${product.status}`
                td= product.warranty
                td
                  a(href=`deletProduct/${product._id}`)
                    .badge.text-bg-danger.ms-1
                      i.bi.bi-trash.m-2

